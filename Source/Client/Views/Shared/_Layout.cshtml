<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - Client</title>
		<link asp-append-version="true" href="~/Style/bootstrap.min.css" rel="stylesheet" />
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
				<div class="container-fluid ps-3">
					<a asp-action="Index" asp-controller="Home" class="navbar-brand">Client</a>
					<button aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbar" data-bs-toggle="collapse" type="button">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbar">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a aria-current="page" asp-action="Index" asp-controller="Home" class="nav-link active">Home</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>
		<div class="container">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
		<footer class="border-top pt-3 text-center text-muted">
			<div class="container">
				&copy; 2021 - Client
			</div>
		</footer>
		<script asp-append-version="true" src="~/Scripts/bootstrap.min.js"></script>
	</body>
</html>